@startuml
class acd.ol.CustomMap {
	overviewMapControl
	projection
	baseLayers
	overviewMapLayers
	custom
	CustomMap({customLayers:{baseLayerGroup, overlayGroup, overviewMapLayers}, projection})
	initializeView(boundingBox, maxZoom)
	zoomToExtent(boundingBox, maxZoom)
	zoomViewToExtent(view, boundingBox, maxZoom)
	zoomToGeometry(geometry)
}
class acd.ol.MapWithActions {
	actions
	activateAction(acd.ol.MapAction)
	activateDefaultAction()
	addAction(acd.ol.MapAction)
}
class acd.ol.MapAction {
	interactions
	addInteraction(ol.interaction.Interaction)
	activate()
	deactivate()
}
class acd.ol.action.SelectAction {
	selectStyle
	highlightStyle
	highlightInteraction
	selectInteraction
	selectInteractionFilter
	SelectAction(layers, onSelect)
	clearFeatures()
}
class acd.ol.action.BoxSelectAction {
	dragBoxInteraction
	BoxSelectAction(layers, onSelect)
}
class acd.ol.action.DeleteAction {
	DeleteAction(layers, onDelete)
}
class acd.ol.action.DrawAction {
	drawInteraction
	DrawAction(layer, type, onDraw)
}
class acd.ol.action.ShowInfoAction {
	layer
	ShowInfoAction(layer, infoPromise, loadingMessage)
	clear()
}
class acd.ol.action.TranslateAction {
	selectInteraction
	translateInteraction
	TranslateAction(layer, onTranslate)
}
hide ol.Map members
hide ol.interaction.Interaction members

ol.Map <|-- acd.ol.CustomMap
acd.ol.CustomMap <|-- acd.ol.MapWithActions
acd.ol.MapWithActions "1" *-- "*" acd.ol.MapAction
acd.ol.MapAction <|-- acd.ol.action.SelectAction
acd.ol.action.SelectAction <|-- acd.ol.action.BoxSelectAction
acd.ol.action.BoxSelectAction <|-- acd.ol.action.DeleteAction
acd.ol.MapAction <|-- acd.ol.action.DrawAction
acd.ol.action.DrawAction <|-- acd.ol.action.ShowInfoAction
acd.ol.MapAction <|-- acd.ol.action.TranslateAction
acd.ol.MapAction "1" *-- "*" ol.interaction.Interaction
@enduml